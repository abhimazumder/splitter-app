<%- include('./partials/header') %>

<div class="container my-5">
    <div class="d-flex fles-row" style="justify-content:center;align-items:center;">
    <span style="width:20%;">
        <div>
            <div class="card text-white bg-dark mb-2" style="max-width:13rem;max-height:4rem;">
                <div class="card-body">
                    <div class="d-flex flex-row" style="justify-content: space-between;">
                        <span class="card-title"><h5 class="card-text" style="color:lightskyblue;">₹ <%= total %></h5></span>
                        <span><p class="float-end">Total &#128176;</p></span>
                    </div>
                </div>
            </div>
            <div class="card text-white bg-dark mb-4" style="max-width:13rem;max-height:4rem;">
                <div class="card-body">
                    <div class="d-flex flex-row" style="justify-content: space-between;">
                        <span class="card-title"><h5 class="card-text" style="color:lightskyblue;">₹ <%= average %></h5></span>
                        <span><p class="float-end">Average &#128176;</p></span>
                    </div>
                </div>
            </div>
        </div>
    </span>
    <span style="width:80%;">
        <div class="row row-cols-1 row-cols-md-3">
            <% for(let due of dues){ %>
                <div class="col mb-4">
                    <div class="card text-white bg-dark" id="<%= due.memberName %>">
                        <% if(due.type=='Receive' ) { %>
                            <div class="card-header">
                                <%= due.memberName %> &#129297;
                            </div>
                            <div class="card-body">
                                <h5 class="card-title" style="color:greenyellow">₹ <%= due.difference %></h5>
                        <% } else { %>
                            <div class="card-header">
                                <%= due.memberName %> &#128554;
                            </div>
                            <div class="card-body">
                                <h5 class="card-title" style="color:gold">₹ <%= due.difference %></h5>
                        <% } %>
                                <div class="d-flex flex-row" style="justify-content: space-between;">
                                    <span>
                                        <p class="card-text"><%= due.type %></p>
                                    </span>
                                    <span class="float-end"><a href="/complete/<%= due.memberName %>/<%= due.total %>"class="btn btn-sm btn-outline-light">Details</a><span>
                                </div>
                            </div>
                        </div>
                    </div>
                 <% } %>
                </div>
            </span>
        </div>
        <div class="my-5 text-center">
            <a href="/dashboard" class="btn btn-dark">Return</a>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>