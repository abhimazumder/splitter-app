<%- include('./partials/header') %>

<div class="container my-5">
    <div class="text-center">
        <div>
            <form action="/dashboard" method="POST">
                <div class="input-group">
                    <select id="memberName" name="memberName" class="form-select">
                        <option value="" disabled selected>Select member</option>
                        <% for(let member of members) { %>
                            <option value="<%= member %>"><%= member %></option>
                        <% } %>
                    </select>
                    <input type="text" id="amount" name="amount" class="form-control" pattern= "^[1-9][0-9]*$" required placeholder="Enter amount">
                    <input type="text" id="item" name="item" class="form-control" placeholder="Enter item name (Optional)">
                    <button class="btn btn-dark" type="submit">Add</button>
                  </div>
            </form>
        </div>
        <div class="mt-5">
            <ul class="list-group">
                <% for(let spend of spends) { %>
                    <div class="d-flex flex-row">
                        <li class="list-group-item rounded bg-dark text-white m-1 w-100"><%= spend.memberName %> spent â‚¹<%= spend.amount %> on <%= spend.item %> &#<%= getEmoji(spend.amount) %></li>
                        <a class="btn btn-sm btn-dark m-1 py-2 px-3" href="/dashboard/edit/<%= spend._id %>">Edit</a>
                        <a class="btn btn-sm btn-dark m-1 py-2 px-3" href="/dashboard/clear/<%= spend._id %>">Remove</a>
                    </div>
                <% } %>
            </ul>
            <div class="my-5">
                <a href="/" class="btn btn-dark m-1">Add Member</a>
                <a href="/dashboard/clear" class="btn btn-dark m-1">Clear</a>
                <a href="/complete" class="btn btn-dark m-1">Complete</a>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>